<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 搜索区域（复用项目已有图标和样式） -->

    <!-- 单词列表 -->

    <!-- 分页组件（复用项目已有箭头） -->

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="8dp"
            android:hint="请输入单词搜索"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp"
            android:text="搜索"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/gray"
            android:paddingHorizontal="16dp"
            android:text="重置"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_word"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="添加单词"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_word_list"
        android:layout_width="380dp"
        android:layout_height="588dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/iv_prev"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_page_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_page_2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="2"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/shape_page_selected"
            android:textColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginHorizontal="4dp"/>

        <TextView
            android:id="@+id/tv_page_3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_page_4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="4"
            android:gravity="center"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginHorizontal="4dp"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>