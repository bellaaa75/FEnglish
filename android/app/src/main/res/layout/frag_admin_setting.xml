<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.fenglishandroid.viewModel.AdminSettingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8F9FA">

        <!-- 搜索栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="输入用户名或ID搜索"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:imeOptions="actionSearch"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:text="搜索"
                android:textColor="@android:color/white"
                android:background="#2196F3"
                android:paddingHorizontal="20dp" />

        </LinearLayout>

        <!-- 加载状态 -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <!-- 用户列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_user_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            tools:listitem="@layout/item_user" />

        <!-- 空状态 -->
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无用户数据"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone" />

        <!-- 分页控件 - 无边框箭头 -->
        <LinearLayout
            android:id="@+id/pagination_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:visibility="gone">

            <!-- 上一页按钮 - 移除背景边框 -->
            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:background="@android:color/transparent"
            android:contentDescription="上一页"
            android:layout_marginEnd="16dp"
            android:scaleType="center" />

            <!-- 页码容器 -->
            <LinearLayout
                android:id="@+id/page_number_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" />

            <!-- 下一页按钮 - 移除背景边框 -->
            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_right"
                android:background="@android:color/transparent"
            android:contentDescription="下一页"
            android:layout_marginStart="16dp"
            android:scaleType="center" />

        </LinearLayout>

        <!-- 页脚信息 -->
        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="8dp"
            android:visibility="gone" />

    </LinearLayout>
</layout>