<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginTop="10dp">

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/iv_detail_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_left"
        android:contentDescription="返回"
        android:layout_marginBottom="30dp"/>

    <!-- 单词名称 + 词性（仅单词加粗） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/tv_detail_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detail_part_of_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- 单词变形区域（正常黑色，不加粗） -->
    <TextView
        android:id="@+id/tv_detail_third_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tv_detail_present_participle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tv_detail_past_participle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tv_detail_past_tense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <!-- 单词释义（正常黑色，不加粗） -->
    <TextView
        android:id="@+id/tv_detail_explain_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单词释义"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_detail_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- 例句区域（去掉“例句：”开头，仅显示原文） -->
    <TextView
        android:id="@+id/tv_detail_example_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="例句"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_detail_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"/>

</LinearLayout>