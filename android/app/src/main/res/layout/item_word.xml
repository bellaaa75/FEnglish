<?xml version="1.0" encoding="utf-8"?>
<!-- 外层用 ConstraintLayout，精准控制组件约束，适配大屏 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/shape_item_border"
    android:layout_marginBottom="12dp"
    android:minHeight="100dp">


<androidx.constraintlayout.widget.ConstraintLayout
android:id="@+id/cl_word_info"
android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/tv_edit"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">


<TextView
android:id="@+id/tv_word_name"
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="supercalifragilisticexpialidocious"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:maxLines="2"
    android:ellipsize="end"
    android:lineSpacingExtra="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


<TextView
android:id="@+id/tv_part_of_speech"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingHorizontal="10dp"
android:paddingVertical="3dp"
android:text="adj."
android:textColor="@color/black"
android:textSize="13sp"
    android:background="@color/gray_light"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/tv_word_name"
    app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_word_explain"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:text="形容极其美妙的、令人难以置信的（测试超长释义：用于电影《欢乐满人间》中的虚构词汇，后来被收录进词典，成为英语中最长的单词之一）"
        android:textColor="@color/gray_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_part_of_speech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_part_of_speech"
        app:layout_constraintTop_toTopOf="@id/tv_part_of_speech" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="编辑"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="删除"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>