<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.fenglishandroid.viewModel.UserProfileViewModel" />

        <variable
            name="user"
            type="com.example.fenglishandroid.model.request.User" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部标题 -->
            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fenglish"
                android:textSize="24sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="20dp"
                android:background="@android:color/white"
                android:elevation="2dp" />

            <!-- 加载进度条 -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />

            <!-- 用户信息卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_margin="16dp"
                android:padding="20dp"
                android:elevation="4dp"
                android:clipToPadding="false">

                <!-- 用户ID和姓名 -->
                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`用户ID：` + user.userId}"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"
                    tools:text="用户ID：123456" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{user.userName}"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    tools:text="张三" />

                <!-- 用户信息表格 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 用户名 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="用户名"
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_username_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.userName}"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            tools:text="张三" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- 性别 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="性别"
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_gender_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.gender}"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            tools:text="女" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- 联系电话 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="联系电话"
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_phone_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.phoneNumber}"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            tools:text="12345678900" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- 邮箱地址 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="邮箱地址"
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_email_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.userMailbox}"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="123456@qq.com" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- 注册时间 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="注册时间"
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_register_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.registerTime}"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            tools:text="2024年11月" />
                    </LinearLayout>

                </LinearLayout>

                <!-- 编辑按钮 -->
                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="编辑个人信息"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="#1976D2"
                    android:layout_marginTop="20dp"
                    android:stateListAnimator="@null"
                    android:elevation="0dp" />

            </LinearLayout>

            <!-- 功能菜单 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_margin="16dp"
                android:elevation="4dp">

                <!-- 学习轨迹 -->
                <LinearLayout
                    android:id="@+id/layout_learning_track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的学习轨迹"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#999999" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <!-- 修改密码 -->
                <LinearLayout
                    android:id="@+id/layout_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改密码"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#999999" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <!-- 注销账号 -->
                <LinearLayout
                    android:id="@+id/layout_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="注销账号"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#999999" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <!-- 退出登录 -->
                <LinearLayout
                    android:id="@+id/layout_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="退出登录"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#999999" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>