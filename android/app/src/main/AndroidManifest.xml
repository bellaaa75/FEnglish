<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fenglishandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.MyApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FenglishAndroid">

        <!-- 启动页 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity
            android:name=".ui.index.IndexActivity"
            android:exported="false" />

        <!-- 管理员主页Activity -->
        <activity
            android:name=".ui.admin.AdminIndexActivity"
            android:exported="false"
            android:theme="@style/Theme.FenglishAndroid" />

        <!-- 登录注册相关 -->
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.login.AdminLoginActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.register.AdminRegisterActivity" />

        <!-- 注册新增单词书Activity -->
        <activity
            android:name=".ui.admin.AddVocabularyBookActivity"
            android:exported="false" />

        <!-- 注册编辑单词书Activity -->
        <activity
            android:name=".ui.admin.EditVocabularyBookActivity"
            android:exported="false" />

        <!-- 注册单词书详情Activity -->
        <activity
            android:name=".ui.admin.VocabularyBookDetailActivity"
            android:parentActivityName=".fragment.admin.AdminWordBookFragment" />

        <activity android:name=".ui.admin.WordEditActivity"/>
        <activity android:name=".ui.admin.WordAddActivity"/>

    </application>

</manifest>

